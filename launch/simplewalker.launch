<launch>
    <arg name="enable_record" default="false"/>

    <include file="$(find turtlebot_gazebo)/launch/turtlebot_world.launch"/>

    <node
        pkg="simplewalker"
        name="walker1"
        type="walker"
    />

    <node
        pkg="rosbag"
        name="record"
        type="record"
        args="-a -O session.bag -x /camera/(.*)"
        if="$(arg enable_record)"
    />
</launch>
